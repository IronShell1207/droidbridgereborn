<?xml version="1.0" encoding="utf-8" ?>
<Button
	x:Class="DroidBridgeReborn.Views.Controls.PanelControls.BatteryPresenterPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:DroidBridgeReborn.Views.Controls.PanelControls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModels="using:DroidBridgeReborn.ViewModels"
	Height="270"
	Padding="0"
	d:DataContext="{d:DesignInstance viewModels:DevicePageViewModel}"
	Style="{StaticResource DeviceTileButtonAlignedStyle}"
	mc:Ignorable="d">

	<Grid>
		<Image
			Height="100"
			Margin="20,35,10,20"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Opacity="0.15"
			Source="{StaticResource _chargingImage}"
			Visibility="{Binding SelectedDevice.BatteryInfo.IsACPowered}" />
		<Image
			Height="100"
			Margin="20,35,20,20"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Opacity="0.15"
			Source="{StaticResource _wirelessChargingImage}"
			Visibility="{x:Bind IsWirelessCharging, Mode=OneWay}" />
		<Grid>

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<controls:RadialGauge
				Grid.Row="2"
				Height="200"
				Margin="0,0,0,-40"
				Foreground="Transparent"
				IsInteractive="True"
				MaxAngle="90"
				Maximum="100"
				MinAngle="-90"
				Minimum="0"
				NeedleWidth="0"
				ScaleBrush="Gray"
				ScaleTickBrush="Transparent"
				ScaleWidth="20"
				Style="{StaticResource _CUSTOMRadialGuage}"
				TickBrush="Transparent"
				TrailBrush="#a9dfd8"
				Value="{Binding SelectedDevice.BatteryInfo.BatteryLevel}" />

			<TextBlock
				Grid.Row="2"
				Margin="0,0,0,-50"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontFamily="{StaticResource Nunito}"
				FontSize="30"
				FontWeight="Medium">
				<Run Text="{Binding SelectedDevice.BatteryInfo.BatteryLevel}" /><Run Text="%" />
			</TextBlock>
			<StackPanel Margin="25,25,0,0" Spacing="5">
				<TextBlock
					VerticalAlignment="Center"
					Style="{StaticResource TileHeaderTextStyle}"
					Text="Battery" />
				<TextBlock Margin="0,5,0,0" Style="{StaticResource TileTextsStyle}">
					<Run Text="Temperature:" />
					<Run Text="{Binding SelectedDevice.BatteryInfo.Temperature}" />
					<Run Text="ÂºC" />
				</TextBlock>
				<TextBlock Style="{StaticResource TileTextsStyle}" Visibility="{Binding SelectedDevice.BatteryInfo.IsCharging}">
					<Run Text="Charging rate:" />
					<Run Text="{Binding SelectedDevice.BatteryInfo.ChargingWatts}" /><Run Text="w" />
				</TextBlock>
				<TextBlock Style="{StaticResource TileTextsStyle}" Visibility="{Binding SelectedDevice.BatteryInfo.IsCharging}">
					<Run Text="Charging voltage:" />
					<Run Text="{Binding SelectedDevice.BatteryInfo.VoltageCharging}" /><Run Text="V" />
					<Run Text="{Binding SelectedDevice.BatteryInfo.AmpsChargingRate}" /><Run Text="A" />
				</TextBlock>
			</StackPanel>
		</Grid>
	</Grid>
</Button>
